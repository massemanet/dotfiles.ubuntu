#!/bin/bash

sudo apt-get update && \
sudo apt-get upgrade -y && \
sudo apt-get install --autoremove -y \
     automake curl deborphan emacs g++ git gopass htop jq lksctp-tools \
     make mosh ncdu netcat-traditional pass powertop python qutebrowser shellcheck

# snap is nice if it works
# the docker snap is sadly broken
# sudo snap install chromium firefox opera spotify
# sudo snap install intellij-idea-community --classic

# get my stuff
[ ! -e ~/.git ] &&
    cd /tmp && \
	rm -rf dotfiles.ubuntu && \
	git clone https://github.com/massemanet/dotfiles.ubuntu && \
	cd dotfiles.ubuntu && \
	git remote set-url origin git@github.com:massemanet/dotfiles.ubuntu && \
	mv /tmp/dotfiles.ubuntu/.git ~ && \
	(cd && git reset --hard)

~/bin/install.sh aws-vault
~/bin/install.sh awscli
~/bin/install.sh bazelisk
~/bin/install.sh docker
~/bin/install.sh docker-compose
~/bin/install.sh erlang
~/bin/install.sh java
~/bin/install.sh keybase
~/bin/install.sh pgadmin
~/bin/install.sh python

# emacs (cask)
[ ! -d ~/.cask ] && \
    curl -fsSL https://raw.githubusercontent.com/cask/cask/master/go | python
(cd ~/.emacs.d && ~/.cask/bin/cask install)
